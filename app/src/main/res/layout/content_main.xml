<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_title"
        android:id="@+id/textView"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="30dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:divider="@color/primary_dark_material_dark"
        android:focusable="false">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/media_streamer"
            android:id="@+id/button2"
            android:background="#5C6BC0"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:onClick="playMedia"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/super_duo1"
            android:id="@+id/button4"
            android:background="#5C6BC0"
            android:layout_below="@+id/button4"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:onClick="showScores"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/super_duo2"
            android:id="@+id/button"
            android:background="#5C6BC0"
            android:layout_below="@+id/button"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:onClick="loadLibrary"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ant_terminator"
            android:id="@+id/button5"
            android:background="#5C6BC0"
            android:layout_below="@+id/button5"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:onClick="bigApp"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/materialize"
            android:id="@+id/button3"
            android:background="#5C6BC0"
            android:layout_below="@+id/button3"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:onClick="showBacon"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/capstone"
            android:id="@+id/button7"
            android:background="#c84d5f"
            android:layout_below="@+id/button2"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:onClick="showCapstone"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
